<%- include('header.ejs') %>
  <body>
    <%- include('navigation.ejs') %>
    <div class="container">
      <h1>CRUD TIENDA</h1>
      <p>
       Agregar un producto al catálogo de productos.
      </p>
      <h2>Agregar producto</h2>
      <section>

          <form action="/api/v1/products/new" method="post">
            <div class="form-group">
              <label for="tituloId">Titulo del producto</label>
              <input type="text" class="form-control" name="title"  id="tituloId" aria-describedby="emailHelp" placeholder="Título del producto">
            </div>
            <div class="form-group">
              <label for="descripcionId">Descripcion del producto</label>
              <input type="text" class="form-control" name="desc" id="descripcionId" placeholder="Descripcion">
            </div>
            <div class="form-group">
              <label for="categories">Categories</label>
              <select name="categories" id="categories" class="form-control form-control-sm">
                <option>Electrónico</option>
                <option>Complementos</option>
              </select>
            </div>
            <div class="form-group">
              <label for="sizeId">Size</label>
              <input type="text" class="form-control" name="size" id="sizeId" placeholder="Size">
            </div>
            <div class="form-group">
              <label for="color">Color</label>
              <input type="text" class="form-control" name="color" id="color" placeholder="Color">
            </div>
            <div class="form-group">
              <label for="priceId">Price</label>
              <input type="text" class="form-control" name="price" id="priceId" placeholder="Price">
            </div>
            <div class="form-group">
              <label for="imageId">Image</label>
              <input type="file" class="form-control" name="image" id="imageId" placeholder="Image">
            </div>
            <br>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Submit</button>
              </div>
            
          </form>
      </section>
    </div>
  </body>
</html>
